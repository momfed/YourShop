<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages }}hidden{{/if}} >
      {{ successMsg }}
    </div>
  </div>
</div>
<p id="AC" data-title="marketi"></p>
{{# each products }}
  <div class="row">
  	{{# each this }}
      <a class="alpha" href="/market/product?p={{ this._id }}">
  	    <div class="col-xs-12 col-sm-4 col-md-4 blur">
      	  <div class="thumbnail" style="min-height: 380px">
          		<img src="{{ this.imagePATH }}" alt="{{ this.title }}" class="img-responsive">
            	<div class="caption">
              	<h3 class="text-capitalize">{{ this.title }}</h3>
              	<p class="dsc">{{ this.description }}</p>
              	<div class="clearfix">
              		<div class="price pull-left">{{ this.price }} L</div>
                  {{# if kind }}
              		  <a href="/market/product?p={{ this._id }}" class="btn btn-success pull-right" role="button"><i class="glyphicon glyphicon-link"></i> Shko te produkti</a>
                  {{ else }}
                    <a href="/add-to-cart?prod={{ this._id }}" class="btn btn-success pull-right" role="button"><i class="glyphicon glyphicon-shopping-cart"></i> Shto n&euml; shport&euml;</a>
                  {{/if}}
              	</div>
          		</div>
          	</div>
      	</div> 
      </a>
  	{{/each}}
  </div>
{{/each}}
<div align="center">
  <nav id="pagination" data-page="{{ page }}" data-link='{{ link }}' aria-label="Page navigation">
    <ul class="pagination">
      <li id="fili"><a id="fillimi" href="/market">Fillimi</a></li>
      <li id="pr">
        <a id="prev" href="#" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      <li><a id="prv" href="#"></a></li>
      <li class="active"><a id="current" href="#"></a></li>
      <li><a id="nxt" href="#"></a></li>
      <li>
        <a id="next" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
      <li><a id="fundi" href="#">Fundi</a></li>
    </ul>
  </nav>
</div>
