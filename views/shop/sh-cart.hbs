{{# if products }}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<ul class="list-group">
				{{# each products }}
					<li class="list-group-item">
						<span class="badge">{{ this.qty }}</span>
						<strong>{{ this.item.title }}</strong>
						<span class="label label-success">{{ this.price }} Lek&euml;</span>
						<span class="label label-info">{{ this.kind }}</span>
						<div class="btn-group">
							<button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" type="button">Action <span class="caret"></span></button>
							<ul class="dropdown-menu">
								<li><a href="/reduce/{{ this.item._id }}?kind={{#if this.kind}}{{ this.kind }}{{else}}null{{/if}}">Reduce by 1</a></li>
								<li><a href="/remove/{{ this.item._id }}?kind={{#if this.kind}}{{ this.kind }}{{else}}null{{/if}}">Remove all</a></li>
							</ul>
						</div>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<strong>Total: {{ totalPrice }} Lek&euml;</strong>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<a href="/checkout" class="btn btn-success pull-right">Checkout</a>
		</div>
	</div>
{{ else }}
	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<br>
			<div class="notice notice-danger text-center animated bounceInDown">
				<h3><strong>Error: </strong>Nuk ndodhet asnj&euml; produkt n&euml; shport&euml;!</h2>
			</div>
			<div style="animation-delay:0.3s; -moz-animation-delay:0.3s; -webkit-animation-delay:0.3s" class="notice animated bounceInLeft">
				<a href="/market" class="button2"><span></span></a>
			</div>
		</div>
	</div>
{{/if}}


