<div class="notice notice-success">
  <h1>Rezultat e k&euml;rkimit p&euml;r <strong class="text-capitalize">"{{ value }}"</strong> :</h1><br>
</div>
{{# each products }}
  <div class="row">
    {{# each this }}
      <a class="alpha" href="/market/product?p={{ this._id }}">
        <div class="col-xs-12 col-sm-4 col-md-4 blur">
          <div class="thumbnail" style="min-height: 380px">
              <img src="{{ this.imagePATH }}" alt="{{ this.title }}" class="img-responsive">
              <div class="caption">
                <h3 class="text-capitalize">{{ this.title }}</h3>
                <p class="dsc">{{ this.description }}</p>
                <div class="clearfix">
                  <div class="price pull-left">{{ this.price }} L</div>
                  {{# if kind }}
                    <a href="/market/product?p={{ this._id }}" class="btn btn-success pull-right" role="button"><i class="glyphicon glyphicon-link"></i> Shko te produkti</a>
                  {{ else }}
                    <a href="/add-to-cart?prod={{ this._id }}" class="btn btn-success pull-right" role="button"><i class="glyphicon glyphicon-shopping-cart"></i> Shto n&euml; shport&euml;</a>
                  {{/if}}
                </div>
              </div>
            </div>
        </div> 
      </a>
    {{/each}}
  </div>
{{/each}}