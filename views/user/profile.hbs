<link rel='stylesheet' href='/stylesheets/profile.css' />
{{# each user}}
    <div id="header" class="row text-center">
        <div id="logo">
            <span id="danger col-xs-12" style="color: #000">
                <span class="dd animated bounceInDown">W</span>
                <span class="da animated bounceInDown">E</span>
                <span class="dn animated bounceInDown">L</span>
                <span class="dg animated bounceInDown">C</span>
                <span class="de animated bounceInDown">O</span>
                <span class="dr animated bounceInDown">M</span>
                <span class="di animated bounceInDown">E</span>
            </span>
            <span> </span>
            <span id="zone col-xs-12" style="color: #000">
                <span class="zz animated text-uppercase bounceInDown">{{ firstName }}</span>
            </span>
        </div>
    </div>

    <div id="main" class="row">
        <div id="sidebar" class="col-sm-4">
            <nav id="sidebar-nav">
                <ul>
                    <li><a id="side-history" class="animated bounceInLeft text-uppercase" href="/user/profile/history"><i class="glyphicon glyphicon-list"></i> Historiku I Porosive</a>
                    <li><a id="side-address" class="animated bounceInLeft text-uppercase" href="/user/profile/address"><i class="glyphicon glyphicon-map-marker"></i> Adresat E Mia</a>
                    <li><a id="side-update" class="animated bounceInLeft text-uppercase" href="/user/profile/user"><i class="glyphicon glyphicon-user"></i> Te dhenat e mia</a>
                </ul>
            </nav>
        </div>

        <div id="content" class="animated bounceInUp col-sm-8 text-center">
            <div class="row">
                <div class="col-sm-4">
                    <img class="img-responsive animated bounceInUp" src="http://lorempixel.com/500/500/people">
                </div>
                <div class="col-sm-4">
                    <img class="img-responsive animated bounceInUp" src="http://lorempixel.com/500/500/nature">
                </div>
                <div class="col-sm-4">
                    <img class="img-responsive animated bounceInUp" src="http://lorempixel.com/500/500">
                </div>
            </div>
        </div>
    </div>
{{/each}}